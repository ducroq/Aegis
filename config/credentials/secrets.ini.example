# Aegis Secrets Configuration Template
# Copy this file to secrets.ini and fill in your actual credentials

[api_keys]
# FRED API Key (required)
# Get free key: https://fred.stlouisfed.org/docs/api/api_key.html
fred_api_key = your_fred_api_key_here

# SendGrid API Key (optional - for email alerts)
# Get key: https://app.sendgrid.com/settings/api_keys
# Alternative: use Gmail SMTP (see email_credentials section)
sendgrid_api_key = your_sendgrid_key_here

[email_credentials]
# Gmail SMTP (free alternative to SendGrid)
# Enable "App Passwords" in Google Account settings
sender_email = your-email@gmail.com
sender_password = your-app-password-here
recipient_email = your-email@gmail.com

# SMTP settings (Gmail defaults)
smtp_host = smtp.gmail.com
smtp_port = 587

[optional_apis]
# Alpha Vantage (alternative to Yahoo Finance if needed)
# Get key: https://www.alphavantage.co/support/#api-key
alpha_vantage_key = your_alpha_vantage_key_here

# Quandl/Nasdaq Data Link (alternative data source)
# Get key: https://data.nasdaq.com/sign-up
quandl_key = your_quandl_key_here
